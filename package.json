      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@mate-academy/eslint-config-react-typescript": "^1.0.13",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.4",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/react-redux": "^7.1.32",
    "@types/react-slick": "^0.23.12",
    "husky": "^8.0.3",
    "lint-staged": "12.4.0",
    "prettier": "^3.1.0",
    "sass": "^1.69.7",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.3.3"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {}
    }
  },
  "lint-staged": {
    "*.ts": "npm run lint",
    "*.tsx": "npm run lint"
  }
}
